{
    "name": "supertest_jest",
    "version": "1.0.0",
    "description": "This is a API autotestingtesting framework using JS, Jest and Supertest.",
    "main": "index.js",
    "scripts": {
        "test": "jest"
    },
    "author": "Alexander Grechko",
    "license": "ISC",
    "devDependencies": {
        "jest": "26.6.3",
        "jest-cli": "26.6.3",
        "jest-html-reporter": "3.3.0",
        "supertest": "6.0.1"
    },
    "jest": {
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "reporters": [
            "default",
            [
                "./node_modules/jest-html-reporter",
                {
                    "pageTitle": "Test Report",
                    "outputPath": "report/index.html",
                    "includeFailureMsg": true
                }
            ]
        ]
    }
}
